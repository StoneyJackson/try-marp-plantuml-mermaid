#!/usr/bin/env bash

argstring="$*"

if [[ $argstring =~ "--pdf" ]]; then
    # Convert slide deck into PDF (using Chromium in Docker)
    docker run --rm --init -v $PWD:/home/marp/app/ -e MARP_USER="$(id -u):$(id -g)" -e LANG=$LANG marpteam/marp-cli slide-deck.md --pdf
elif [[ $argstring =~ "--pptx" ]]; then
    # Convert slide deck into PPTX (using Chromium in Docker)
    docker run --rm --init -v $PWD:/home/marp/app/ -e MARP_USER="$(id -u):$(id -g)" -e LANG=$LANG marpteam/marp-cli slide-deck.md --pptx
elif [[ $argstring =~ "-w" ]]; then
    # Watch mode
    docker run --rm --init -v $PWD:/home/marp/app/ -e MARP_USER="$(id -u):$(id -g)" -e LANG=$LANG -p 37717:37717 marpteam/marp-cli -w slide-deck.md
elif [[ $argstring =~ "-s" ]]; then
    # Server mode (Serve current directory in http://localhost:8080/)
    docker run --rm --init -v $PWD:/home/marp/app -e MARP_USER="$(id -u):$(id -g)" -e LANG=$LANG -p 8080:8080 -p 37717:37717 marpteam/marp-cli "$@"
else
    # Convert slide deck into HTML
    docker run --rm -v $PWD:/home/marp/app/ -e MARP_USER="$(id -u):$(id -g)" -e LANG=$LANG marpteam/marp-cli slide-deck.md
fi
